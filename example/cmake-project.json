{
    "project": {
        "name": "hello_world",
        "version": "0.1.0",
        "description": "outputs hello world"
    },
    "dependencies": {
        "fmt": {
            "method": "fetch_content",
            "version": "10.1.1",
            "url": "https://github.com/fmtlib/fmt/archive/refs/tags/{{version}}.zip"
        },
        "openssl": {
            "skip": false,
            "method": "external_project",
            "version": "3.1.4",
            "url": "https://github.com/openssl/openssl/archive/refs/tags/openssl-{{version}}.zip",
            "url_hash": "SHA256=c087d98815696d3f1b19848604aef1382d11e216634d3b72bd61ec27fb645f80",
            "configure_command": [
                "./Configure", "-static", "no-shared",
                "--prefix=${CMAKE_PROJECT_EXTERNAL_INSTALL_LOCATION}",
                "--openssldir=${CMAKE_PROJECT_EXTERNAL_INSTALL_LOCATION}"
            ],
            "build_command": ["make"],
            "install_command": ["make", "install_sw"],
            "test_command": [""],
            "build_in_source": true,
            "targets": [
                { "target": "OpenSSL::Crypto", "binary": "libcrypto" },
                { "target": "OpenSSL::SSL",    "binary": "libssl"    }
            ]
        }
    },
    "dev-dependencies": {
        "catch2": {
            "method": "fetch_content",
            "version": "3.4.0",
            "url_hash": "SHA256=cd175f5b7e62c29558d4c17d2b94325ee0ab6d0bf1a4b3d61bc8dbcc688ea3c2",
            "url": "https://github.com/catchorg/Catch2/archive/refs/tags/v{{version}}.zip",
            "update_disconnected": true,
            "cmake_args": [
                "-D", "CATCH_INSTALL_DOCS=OFF",
                "-D", "CATCH_INSTALL_EXTRAS=OFF"
            ]
        }
    }
}
